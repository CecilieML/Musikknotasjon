<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffbfc0fd"
    >

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="@dimen/lowestLayerHeight"
        android:layout_width="@dimen/lowestLayerWidth"
        android:id="@+id/lowestLayer"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp">
             <com.businesspanda.verynote.LockableScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:measureAllChildren="false"
                android:id="@+id/scrollview">
                <!-- <LinearLayout
                     android:layout_height="fill_parent"
                     android:layout_width="10dp"
                     android:l
                     android:id="@+id/linLayout"
                     android:background="#fff862ff"
                     android:orientation="horizontal" />-->
            </com.businesspanda.verynote.LockableScrollView>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:id="@+id/middleLayer">

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:id="@+id/upperLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" "
            android:id="@+id/met_text"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/freq"
            android:id="@+id/freqTextview"
            android:textColor="#ff2c3c65"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/metronomeswitch"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />


<!--
        <ImageView
